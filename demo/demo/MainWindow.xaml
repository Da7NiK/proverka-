<Window x:Class="demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="85"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="SandyBrown"/>
        <Grid Grid.Row="2" Background="SandyBrown"/>
        <Image Source="Resources\Логотип.jpg" Stretch="Uniform" Width="100" Height="100" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="16 0"/>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"/>
        <Button x:Name="BackBtn" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Content="Back" Margin="16 0" Width="70" Click="BackBtn_Click"/>
        <TextBlock Text="Мастерица" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40"/>
        
    </Grid>
</Window>
